<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/b66319a9ec.js" crossorigin="anonymous"></script>

    <title>Week {{week_num}} Announcements</title>
</head>

<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
        crossorigin="anonymous"></script>

    <div class="pt-2 w-100">
        <div class="border border-primary rounded mx-2 px-2 py-2 my-2">

            <!-- Header -->
            <div class="jumbotron jumbotron-fluid">
                <div class="container">
                    <h1 class="display-5"><i class="fas fa-bullhorn"></i> Week {{week_num}} Announcements</h1>
                    <p class="lead">Air Force ROTC Detachment 875 - Best Alive </p>
                    <hr class="my-2">
                </div>
            </div>

            <!-- Alerts -->
            <!--<div class="alert alert-primary my-3" role="alert">
                Be sure to hit that <strong>like and subscribe</strong> button
            </div>-->

            <div class="row pt-2">
                <div class="col-sm-4">

                    <!-- Activities -->
                    {{#each activities}}
                    <div class="card mb-1 shadow">
                        <div class="card-body">
                            <h5 class="card-title text-primary">{{this.name}}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">{{this.event}}</h6>
                            <p class="card-text">
                                <i class="fas fa-location-arrow text-secondary"></i>
                                {{this.location}}
                                <br />

                                <i class="fas fa-tshirt text-secondary"></i>
                                {{this.uniform}}
                            </p>
                        </div>
                    </div>
                    {{/each}}
                </div>

                <!-- Announcements -->
                <div class="col-sm">

                    <!-- Countdowns -->
                    {{#if countdowns}}
                    <div class="alert alert-info" role="alert">
                        {{#each countdowns}}
                        <i class="fa fa-info-circle" aria-hidden="true"></i> {{this.text}} <strong>{{format_date
                            this.date}}</strong>
                        <br />
                        {{/each}}
                    </div>
                    {{/if}}

                    <!-- OPORD Link -->
                    <div class="card mb-3 shadow">
                        <div class="card-body">
                            <h4 class="card-title text-primary">
                                <i class="fas fa-file-alt" aria-hidden="true"></i>
                                <a href="{{opord_link}}"> Week {{week_num}} OPORD</a>
                            </h4>
                        </div>
                    </div>

                    {{#each announcements}}
                    <div class="card mb-1 shadow">
                        <div class="card-body">
                            <h5 class="card-title text-primary">{{this.title}}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">{{this.subtitle}}</h6>
                            <p class="card-text">
                                {{this.content}}
                            </p>
                        </div>
                    </div>
                    {{/each}}


                    <p class="text-muted text-center">If you wish to post in the weekly announcements, contact C/Perez
                        (justinmp@vt.edu) by 1400 Sunday.</p>


                    <div class="text-center fs-5">
                        <!-- Social Media Links -->
                        <h3>
                            <a style="text-decoration:none" href="https://www.facebook.com/Det875/" class="">
                                <i class="fa fa-facebook" aria-hidden="true"></i>
                            </a>

                            <a style="text-decoration:none" href="https://www.instagram.com/vtdet875/?hl=en">
                                <i class="fa fa-instagram" aria-hidden="true"></i>
                            </a>

                            <a style="text-decoration:none" href="https://sites.google.com/vt.edu/afrotc-det-875/home?pli=1&authuser=1">
                                <i class="fa fa-fighter-jet" aria-hidden="true"></i>
                            </a>
                        </h3>
                    </div>

                </div>
            </div>

        </div>
    </div>
</body>

</html>